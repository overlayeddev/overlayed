---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import Link from "../components/link.astro";
import Footer from "../components/footer.astro";
import Hero from "../components/hero.astro";
import Contributors from "../components/contributors.astro";
import { Download } from "../components/react/download";
import { Stars } from "../components/react/stars";

import user from "../img/users.png";
import transparent from "../img/transparent.png";
import onTop from "../img/on-top.png";
import resources from "../img/resources.png";
---

<style>
  main {
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }

  .main-content {
    margin: auto;
    width: 800px;
    max-width: calc(100% - 2rem);
  }
</style>

<Layout>
  <main class="pt-60">
    <Hero />

    <div class="w-full flex justify-center items-center">
      <Link
        title="Star Overlayed on GitHub"
        to="https://github.com/overlayeddev/overlayed"
        target="_blank"
        class="z-50"
      >
        <Stars client:load />
      </Link>
    </div>
    <div
      class="relative z-50 main-content pt-4 pb-4 px-4 min-h-screen w-full flex justify-center items-center flex-col gap-10"
    >
      <h1 class="!mb-0">
        Welcome to
        <span
          class="inline-flex leading-[1.5em] font-black transform animate-background-shine bg-[linear-gradient(110deg,#5865F2,45%,#9d9ffc,55%,#5865F2)] bg-[length:250%_100%] bg-clip-text text-transparent"
        >
          Overlayed
        </span>
      </h1>
      <!-- prettier-ignore -->
      <p class="text-center text-zinc-400">
      A modern, <Link underline title="Overlayed on Github" class="text-white" target="_blank" to="https://github.com/overlayeddev/overlayed">open-source</Link>, and free voice chat overlay for Discord that supports Mac, Linux, and Windows!
    </p>
      <Download client:load canary={false} />
      <div class="flex gap-2 sm:gap-6">
        <Link
          title="Installation Guide"
          to="/blog/installation-guide"
          class="bg-gray-800 hover:bg-gray-700 p-2 px-4 rounded-lg text-center"
        >
          Installation Guide
        </Link>
        <Link
          title="About overlayed"
          to="/about"
          class="bg-slate-800 hover:bg-gray-700 p-2 px-4 rounded-lg text-center"
        >
          Why does this exist?
        </Link>
      </div>
      <div class="cards grid md:grid-cols-2 w-full items-center gap-8">
        <Card
          name="User List"
          desc="See who is speaking, muted, and deafened in the current voice channel"
          src={user}
          alt="User List"
        />
        <Card
          name="Transparent & Pinnable"
          desc="Transparent window that ignores mouse clicks"
          src={transparent}
          alt="Transparent"
        />
        <Card
          name="Always on Top"
          desc="Always stays on top so you can continue working or gaming"
          src={onTop}
          alt="Always on top"
        />
        <Card
          name="Blazingly Fastâ„¢"
          desc="Built with Tauri, an efficient Rust framework"
          src={resources}
          alt="Lightweight"
        />
      </div>
      <Contributors />
      <Footer />
    </div>
  </main>
</Layout>
