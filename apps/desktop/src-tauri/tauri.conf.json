{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Overlayed",
    "version": "0.4.0"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": ["https://update.overlayed.dev/{{target}}/{{arch}}/{{current_version}}"],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM5MDVDNEVFQTc2QzJBNDYKUldSR0tteW43c1FGeVhzUm9vNEJKUkFyUXhSS2lrZWRuV1p1VWx5Tkg5bUhEWDZrOGprbGNnWkQK"
    },
    "systemTray": {
      "iconPath": "icons/tray/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "os": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "process": {
        "relaunch": true,
        "exit": true
      },
      "shell": {
        "open": ".*"
      },
      "fs": {
        "scope": ["$APPCONFIG/**", "$CONFIG/**", "$APPDATA/**"],
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "exists": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://api.overlayed.dev/token",
          "https://api.axiom.co/v1/datasets/overlayed-prod/ingest",
          "https://o4506462955503616.ingest.us.sentry.io/api/4507379579289600/envelope"
        ]
      },
      "path": {
        "all": true
      },
      "window": {
        "setSize": true,
        "setPosition": true,
        "startDragging": true,
        "setAlwaysOnTop": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.overlayed.app",
      "icon": ["icons/normal/icon.icns", "icons/normal/icon.ico", "icons/normal/icon.png"]
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "transparent": true,
        "decorations": false,
        "title": "Overlayed - Main",
        "width": 420,
        "height": 600,
        "minHeight": 106,
        "minWidth": 64
      },
      {
        "transparent": true,
        "decorations": true,
        "resizable": false,
        "visible": false,
        "label": "settings",
        "url": "#settings",
        "title": "Overlayed - Settings",
        "width": 600,
        "height": 400
      }
    ]
  }
}
